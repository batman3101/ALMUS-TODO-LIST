{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@almus/*": ["libs/*/src"]
    }
  },
  "include": ["libs/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "apps/*",
    "services/*",
    "functions/*"
  ]
}
