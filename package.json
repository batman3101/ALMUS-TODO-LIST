{
  "name": "almus-todo-list",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web-app",
    "build": "npm run build --workspace=apps/web-app",
    "build:vercel": "npm run build --workspace=@almus/shared-types && npm run build --workspace=@almus/web-app && node scripts/copy-dist.js",
    "test": "echo 'Tests disabled for deployment'",
    "test:watch": "npm run test --workspace=apps/web-app",
    "test:coverage": "npm run test --workspace=apps/web-app",
    "test:ci": "echo 'CI tests disabled'",
    "lint": "npm run lint --workspace=apps/web-app",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test:performance": "node scripts/run-performance-tests.js",
    "test:load": "node tests/performance/loadTest.js"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.15",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-microsoft": "^2.1.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.3",
    "lighthouse": "^12.8.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "no-console": "warn",
      "no-debugger": "error"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "@types/pg": "^8.15.4",
    "framer-motion": "^12.23.12",
    "gsap": "^3.13.0",
    "pg": "^8.16.3"
  }
}
